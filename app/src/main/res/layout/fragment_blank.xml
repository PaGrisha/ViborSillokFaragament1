<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grdient"
    tools:context=".BlankFragment">


    <LinearLayout
        android:id="@+id/lozhka1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lozhka2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cartochka1"
            app:cardCornerRadius="40dp"
            android:layout_width="200dp"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/image_vk"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/vk_icon" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cartochka2"
            app:cardCornerRadius="40dp"
            android:layout_width="200dp"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/image_rutube"
                app:cardCornerRadius="40dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_rutub" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/lozhka2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lozhka1">


        <androidx.cardview.widget.CardView
            android:id="@+id/cartochka3"
            app:cardCornerRadius="40dp"
            android:layout_width="200dp"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/image_funko"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/karas_logo" />



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cartochka4"
            app:cardCornerRadius="40dp"
            android:layout_width="200dp"
            android:layout_height="200dp">


            <ImageView
                android:id="@+id/image_soul"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/soul_logo" />
        </androidx.cardview.widget.CardView>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>